<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvHouseItem"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="11dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="11dp">

            <ImageView
                android:id="@+id/ivHouse"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/gothamssm_bold"
                android:textColor="@color/strong"
                android:textSize="16dp"
                tools:text="Price" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvZipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textColor="@color/medium"
                    android:textSize="12dp"
                    tools:text="Zipcode" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textColor="@color/medium"
                    android:textSize="12dp"
                    tools:text="City" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBedrooms"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/ic_bed"
                    app:tint="@color/medium" />

                <TextView
                    android:id="@+id/tvBedrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textColor="@color/medium"
                    android:textSize="10dp"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/ivBathrooms"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/ic_bath"
                    app:tint="@color/medium" />

                <TextView
                    android:id="@+id/tvBathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textColor="@color/medium"
                    android:textSize="10dp"
                    tools:text="3" />

                <ImageView
                    android:id="@+id/ivSize"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/ic_layers"
                    app:tint="@color/medium" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textSize="10dp"
                    tools:text="65"
                    android:textColor="@color/medium"/>

                <ImageView
                    android:id="@+id/ivDistance"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/medium"
                    app:srcCompat="@drawable/ic_location"
                    app:tint="@color/medium" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothamssm_medium"
                    android:textColor="@color/medium"
                    android:textSize="10dp"
                    tools:text="58.9" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>